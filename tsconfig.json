{
    "compilerOptions": {
      "target": "ES2019",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./error-handler",
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": [
      "error-handler/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}  